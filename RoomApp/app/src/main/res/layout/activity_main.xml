<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/openFile"
        android:layout_width="121dp"
        android:layout_height="60dp"
        android:text="画像選択"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="121dp"
        android:layout_height="60dp"
        android:text="DBに保存"
        app:layout_constraintBottom_toBottomOf="@+id/openFile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toEndOf="@+id/openFile"
        app:layout_constraintTop_toTopOf="@+id/openFile"
        app:layout_constraintVertical_bias="0.07" />

    <Button
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一覧"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1600px"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/openFile"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="800px" />

        <TextView
            android:id="@+id/index"
            android:layout_width="match_parent"
            android:layout_height="800px" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>